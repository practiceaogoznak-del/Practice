<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">  <!-- Используем oval для круга -->

    <!-- Сплошной серый цвет (непрозрачный) -->
    <solid android:color="#808080" />  <!-- HEX-код серого -->

    <!-- Опционально: обводка (если нужна) -->
    <stroke
        android:width="1dp"
        android:color="#606060" />  <!-- Тёмно-серая граница -->

    <!-- Опционально: тень (если нужна) -->
    <corners android:radius="100dp" />  <!-- Для гарантии круглой формы -->
</shape>